@model IEnumerable<Gamerary.Models.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Oyun Listesi</h1>
<p>
    @Html.ActionLink("Oyun Ekle", "Create", new { id = 1 }, new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            Oyun İsmi
        </th>
        <th>
            Platform
        </th>
        <th></th><th></th><th></th><th></th><th></th><th></th><th></th><th></th><th></th><th></th>
        <th>
            $
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.gameName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GamePlatform.platformName)
    </td>
    <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
    <td>
        @Html.DisplayFor(modelItem => item.price)
    </td>
    <td>

        @Html.ActionLink("Düzenle", "Edit", new { id = item.gameID }, new { @class = "btn btn-primary" })
        <div class="row">
            <div class="col">
                <hr>
            </div>
        </div>

        @Html.ActionLink("Oyun Bilgileri", "Details", new { id = item.gameID }, new { @class = "btn btn-success" })
        <div class="row">
            <div class="col">
                <hr>
            </div>
        </div>

        @Html.ActionLink("Sil", "Delete", new { id = item.gameID }, new { @class = "btn btn-danger" })


    </td>
</tr>
}

</table>
