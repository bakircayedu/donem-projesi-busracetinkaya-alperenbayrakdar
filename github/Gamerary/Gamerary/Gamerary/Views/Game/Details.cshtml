        <dd>
            @Html.DisplayFor(model => model.gameName)
        </dd>
        <dt>
            @Html.LabelFor(model => model.GamePlatform.platformName, "Platform:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GamePlatform.platformName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Genre.genre1, "Tür:")
