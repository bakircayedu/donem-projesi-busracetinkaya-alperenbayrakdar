<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #292845;
            color: aliceblue;
        }

        #password {
            color: black;
        }

        .table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
            background-color: lightslategray;
        }

        .btn {
            border: 3px solid black;
            background-color: white;
            color: black;
            padding: 10px 22px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-success {
            border-color: #04AA6D;
            color: green;
        }

            .btn-success:hover {
                background-color: #04AA6D;
                color: white;
            }

        .btn-primary {
            border-color: #2196F3;
            color: dodgerblue;
        }

            .btn-primary:hover {
                background: #2196F3;
                color: white;
            }

        .btn-danger {
            border-color: #f44336;
            color: red;
        }

            .btn-danger:hover {
                background: #f44336;
                color: white;
            }

        .default:hover {
            background: #e7e7e7;
        }

        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }

        #oyunBtn, #oyunBtn1, #oyunBtn2 {
            display: inline-block;
            border-radius: 8px;
            /*background-color: #0f566e;*/
            background-color: #cf5600;
            border: #092f6d;
            color: #b9b9b9;
            text-align: center;
            font-size: 17px;
            padding: 15px;
            width: 175px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
            position: center
        }

            #oyunBtn span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

            #oyunBtn:hover span {
                padding-right: 25px;
            }

                #oyunBtn:hover span:after {
                    opacity: 1;
                    right: 0;
                }

            #oyunBtn1 span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

            #oyunBtn1:hover span {
                padding-right: 25px;
            }

                #oyunBtn1:hover span:after {
                    opacity: 1;
                    right: 0;
                }

            #oyunBtn2 span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

            #oyunBtn2:hover span {
                padding-right: 25px;
            }

                #oyunBtn2:hover span:after {
                    opacity: 1;
                    right: 0;
                }

            #oyunBtn span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

            #oyunBtn1 span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

            #oyunBtn2 span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-left" href="/Home/Index">


                <img src="~/Imgs/output-onlinepngtools.png" width="90" />

            </a>
            @Html.ActionLink("Gamerary", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        </div>
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>

                    @if (User.Identity.IsAuthenticated)
                    {
        <li>@Html.ActionLink("Oyunlar", "Index", "Game/Index")</li>
                        <li>@Html.ActionLink("Oyun Ekle", "", "Game/Create/1")</li>
}


                    @if (User.Identity.IsAuthenticated)
                     {
                        <li class="navbar-right"><a>Hoşgeldin - @User.Identity.Name</a></li>
                        <li class="navbar-right" onclick="logout()">@Html.ActionLink("Çıkış Yap", "Logout", "UserAccounts")</li> }

                                    else
                                    {
                        <li class="navbar-right">@Html.ActionLink("Admin Girişi", "Login", "Account")</li>
                                        <li class="navbar-right">@Html.ActionLink("Kullanıcı Girişi", "Login", "UserAccounts")</li>
}

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gamerary</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        function logout() {
            alert("Çıkış Yaptınız.");
        }

    </script>
</body>
</html>