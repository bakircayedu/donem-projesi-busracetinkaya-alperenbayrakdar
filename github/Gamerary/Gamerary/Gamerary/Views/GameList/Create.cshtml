@model Gamerary.Models.GameList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1>Listeye Oyun Ekle</h1>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
            @Html.LabelFor(model => model.uAccountID, "Eklenecek Hesap", htmlAttributes: new { @class = "control-label col-md-2 invisible" })
        <div class="col-md-10">
            @Html.DropDownList("uAccountID", null, htmlAttributes: new { @class = "form-control invisible" })
            @Html.ValidationMessageFor(model => model.uAccountID, "", new { @class = "text-danger" })
        </div>
        </div>

    <div class="form-group">
        @Html.LabelFor(model => model.gameID, "Listeye Eklenecek Oyun:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("gameID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.gameID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Index", new { id = 1 }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
